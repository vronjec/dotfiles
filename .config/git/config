[alias]
    a  = add --all
    ac = !git add --all && git commit -m
    b  = branch
    c  = commit -m
    ca = commit --amend
    co = checkout
    d  = diff
    i  = init
    l  = log --abbrev=commit --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset %Cgreen(%cr)' --graph
    m  = merge
    p  = pull
    pp = !git pull && git push
    s  = status

[color]
    ui = auto

[core]
    autocrlf = input
    excludesFile = ~/.config/git/ignore

[diff]
    renames = copies
    submodule = log

[fetch]
    recurseSubmodules = on-demand

[merge]
    ff = false
    tool = vimdiff
    conflictstyle = diff3

[pull]
    rebase = preserve

[push]
    default = current
    followTags = true
    recurseSubmodules = check

[status]
    showStash = true

[user]
    name = Viktor Ronjec
    useConfigOnly = true

