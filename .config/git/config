[alias]
    a  = add --all
    ac = !git add --all && git commit -m
    b  = branch
    bd = branch -d
    bm = branch --merged
    c  = commit -m
    ca = commit --amend
    co = checkout
    d  = diff
    ds = diff --stat
    dt = difftool
    f  = fetch
    i  = init
    l  = log --abbrev=commit --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset %Cgreen(%cr)' --graph
    m  = merge
    p  = pull
    pp = !git pull && git push
    r  = rebase
    s  = status

[color]
    ui = auto

[core]
    autocrlf = input
    excludesFile = ~/.config/git/ignore

[diff]
    renames = copies
    submodule = log

[fetch]
    recurseSubmodules = on-demand

[push]
    default = current

[status]
    showStash = true

[user]
    name = Viktor Ronjec
    useConfigOnly = true
